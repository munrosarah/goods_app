<%= provide(:title, 'New Product') %>
<h1>Add a New Product</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@product) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :variety %>
      <%= f.text_field :variety %>

      <%= f.label :price %>
      <%= f.password_field :price %>

      <%= f.label :desc, "Description" %>
      <%= f.password_field :desc %>

      <%= f.label :image %>
      <%= f.text_field :image %>

      <%= f.label :thumbnail %>
      <%= f.text_field :thumbnail %>
      

      <%= f.submit "Create a product", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>