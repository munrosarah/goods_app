<% provide(:title, 'New Product') %>

<h2><%= yield(:title) %></h2>



<div>
  <%= form_for(@product) do |f| %>

    <%= render 'shared/error_messages', target: @product %>
  
    <%= f.label :name %>
    <%= f.text_field :name %>
  
    <%= f.label :variety, "Variety" %>  
    <%= f.select(:variety, [['Single Card','Single Card'],['Card Set', 'Card Set']]) %>
  
    <%= f.label :price %>
    <%= f.text_field :price %>
  
    <%= f.label :desc, "Description" %>
    <%= f.text_area :desc, :cols => "40", :rows => "10" %>
  
    <%= f.label :image, "Image" %>
    <%= f.select(:image, create_image_list) %>
  
    
    <br>
    <br>
    <%= f.submit "Create a product", class: "btn btn-large btn-primary" %>
  <% end %>
</div>
