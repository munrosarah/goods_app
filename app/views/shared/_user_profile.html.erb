<table>
  <tr>
    <td style="padding: 20px">
      <h3>
        <%= current_user.name %>
      </h3>
      <div>
        <%= link_to "view my products", current_user %>
      </div>
      <div>
        <%= pluralize(current_user.products.count, "product") %>
      </div>  
    </td>
    <td>
      <%= render partial: 'shared/new_product_feed', locals: {user: current_user} %>  
    </td>
  </tr>
  <tr>
    <td>
      <%= link_to "Create a Product", 'products/new', class: "btn btn-large btn-primary" %>
    </td>
  </tr>
</table>